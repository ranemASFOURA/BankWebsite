@{
    ViewData["Title"] = "No Account Found";
}

<section class="no-account-section">
    <div class="container text-center">
        <h1>You Don't Have an Account</h1>
        <p>Please create an account to access our services.</p>
        <a href="/AccountManagement/CreateAccount" class="btn">Create Account</a>
    </div>
</section>

<style>
    /* General Styles */
    body {
        background-color: #f8f9fa; /* Light gray background */
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    /* Main Content */
    .main {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    /* No Account Section */
    .no-account-section {
        margin-top: 5%;
        text-align: center;
        background: #ffffff; /* White background */
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
        max-width: 500px;
        width: 100%;
    }

        .no-account-section h1 {
            color: #009970; /* Green heading */
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .no-account-section p {
            color: #6c757d; /* Gray text */
            font-size: 1rem;
            margin-bottom: 30px;
        }

        .no-account-section .btn {
            background-color: #009970; /* Green button */
            color: #ffffff; /* White text */
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .no-account-section .btn:hover {
                background-color: #007b5e; /* Darker green on hover */
            }

    /* Footer */
    .footer {
        width: 100%;
        background: #ffffff; /* White background */
        border-top: 1px solid #e9ecef; /* Light gray border */
        padding: 20px 0;
        text-align: center;
        margin-top: auto; /* Push footer to the bottom */
    }
</style>