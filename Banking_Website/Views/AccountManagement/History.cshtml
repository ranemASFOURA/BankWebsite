@model List<Banking_Website.Models.Transactions>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction History</title>
    
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <!-- Your custom CSS file -->
    <link rel="stylesheet" href="~/css/styles.css"> 
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            padding-top: 80px;
        }
        h2 {
            color: #009970;
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #009970;
            color: white;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        .btn {
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #009970;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .btn:hover {
            background-color: #007b5e;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Maintain original DataTables style */
        .dataTables_wrapper .dataTables_filter input {
            border: 1px solid #ccc !important;
            border-radius: 5px !important;
            padding: 5px !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            background-color: #009970 !important;
            color: white !important;
            border-radius: 5px !important;
            margin: 2px !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background-color: #007b5e !important;
        }

    </style>
</head>
<body>

<div class="container">
    <h2>Transaction History</h2>

    <table id="transactionsTable"> <!-- Added id -->
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Source Account</th>
                <th>Target Account</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.Id</td>
                    <td>@transaction.TransactionType</td>
                    <td>@transaction.Amount.ToString("C")</td>
                    <td>@transaction.Date.ToShortDateString()</td>
                    <td>@transaction.sourceAccountNumber</td>
                    <td>@transaction.targetAccountNumber</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Transactions" asp-action="Index" class="btn">Back to Account Management</a>
</div>

<!-- jQuery and DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<!-- Your custom scripts file -->
<script src="~/js/scripts.js"></script>

<script>
    $(document).ready(function() {
        $('#transactionsTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "lengthMenu": [10, 25, 50, 100], // Custom entries per page
            "language": {
                "search": "Search Transactions:🔍 ",
                "lengthMenu": "Show _MENU_ entries",
                "info": "Showing _START_ to _END_ of _TOTAL_ transactions",
                "paginate": {
                    "next": "Next",
                    "previous": "Previous"
                }
            }
        });
    });
</script>

</body>
</html>
