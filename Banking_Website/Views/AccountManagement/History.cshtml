@model List<Banking_Website.Models.Transactions>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction History</title>
    <link rel="stylesheet" href="~/css/styles.css"> <!-- Link to your CSS file -->
    <script src="~/js/scripts.js" defer></script> <!-- Link to your JS file -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            padding-top: 80px; /* إضافة margin-top لتجنب التداخل مع الـ navbar */
        }
        h2 {
            color: #009970; /* استخدام نفس اللون الأخضر */
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #009970; /* استخدام نفس اللون الأخضر */
            color: white;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        .btn {
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #009970; /* استخدام نفس اللون الأخضر */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .btn:hover {
            background-color: #007b5e; /* لون أخضر داكن عند التمرير */
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Transaction History</h2>

    <table>
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Source Account</th>
                <th>Target Account</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.Id</td>
                    <td>@transaction.TransactionType</td>
                    <td>@transaction.Amount.ToString("C")</td>
                    <td>@transaction.Date.ToShortDateString()</td>
                    <td>@transaction.sourceAccountNumber</td>
                    <td>@transaction.targetAccountNumber</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Transactions" asp-action="Index" class="btn">Back to Account Management</a>
</div>

</body>
</html>