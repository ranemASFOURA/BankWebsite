@model Banking_Website.Models.Accounts

<section id="services" class="services section">
    <div class="container section-title" data-aos="fade-up">
        <h2>Account Management Services</h2>
        <p>Select a service you want to perform:</p>
    </div>
    <h3>Account Number: @Model.AccountNumber</h3>
    <p>Balance: $@Model.InitialBalance</p>
    <div class="container">
        <div class="row gy-4">
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-pencil"></i>
                    </div>
                    <a asp-controller="AccountManagement" asp-action="EditAccount" asp-route-accountId="@Model.Id" class="stretched-link">
                        <h3>Edit Account</h3>
                    </a>
                    <p>Modify your account details securely.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-trash"></i>
                    </div>
                    <a asp-controller="AccountManagement" asp-action="DeleteAccount" asp-route-accountId="@Model.Id" class="stretched-link">
                        <h3>Delete Account</h3>
                    </a>
                    <p>Remove your account permanently.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-box-arrow-in-down"></i>
                    </div>
                    <a asp-controller="Transactions" asp-action="WithdrawDeposit" asp-route-accountId="@Model.Id" class="stretched-link">
                        <h3>Withdraw or Deposit</h3>
                    </a>
                    <p>Withdraw or Deposit funds from your account conveniently.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="500">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="bi bi-arrow-right-circle"></i>
                    </div>
                    <a asp-controller="Transactions" asp-action="Transfer" asp-route-accountId="@Model.Id" class="stretched-link">
                        <h3>Transfer</h3>
                    </a>
                    <p>Transfer funds to other accounts securely.</p>
                </div>
            </div>
        </div>
    </div>
</section>
