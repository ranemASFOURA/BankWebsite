@model Banking_Website.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
}

<section id="login" class="auth-section" style="padding-top: 80px;">
    <!-- Added padding-top -->
    <div class="form-container animate">
        <h2 class="text-center">Login</h2>
        <p class="text-center">Access your account securely.</p>

        <form asp-action="Login" asp-controller="Account" method="post" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-group">
                <label asp-for="Email">Your Email</label>
                <input type="email" asp-for="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password">Your Password</label>
                <input type="password" asp-for="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="RememberMe" type="checkbox" id="RememberMe">
                <label for="RememberMe">@Html.DisplayNameFor(a => a.RememberMe)</label>
            </div>

            <div class="text-center">
                <a asp-action="Register" class="link">Don't have an account? <span>Register here</span></a>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".animate").forEach(el => {
                el.style.opacity = "0";
                setTimeout(() => {
                    el.style.transition = "opacity 1s ease-in-out";
                    el.style.opacity = "1";
                }, 300);
            });
        });
    </script>
}

<style>
    /* General Styles */
    body {
        background-color: #ffffff; /* White background */
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 80px; /* Added padding to avoid navbar overlap */
    }

    .auth-section {
        margin-top: 2%;
        margin-bottom: 1%;
        width: 100%;
        max-width: 500px; /* Increased from 400px to 500px */
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
        border-radius: 12px; /* Rounded corners */
        background-color: #ffffff; /* White background */
    }

    /* Footer Full Width Fix */
    footer {
        width: 100%;
        background: linear-gradient(to right, #f8f9fa, #e9ecef); /* Light gradient */
        color: #333;
        padding: 20px 0;
        text-align: center;
        border-top: 1px solid #ddd;
        margin-top: auto; /* Push footer to the bottom */
    }

    /* Login Form Styles */
    .form-container {
        opacity: 0; /* For animation */
    }

        .form-container h2 {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 10px;
        }

        .form-container p {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 20px;
        }

    .input-group {
        margin-bottom: 15px;
    }

        .input-group label {
            display: block;
            font-size: 0.9rem;
            color: #333;
            margin-bottom: 5px;
        }

        .input-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px; /* Rounded corners */
            font-size: 0.9rem;
            transition: border-color 0.3s ease;
        }

            .input-group input:focus {
                border-color: #009970; /* Green border on focus */
                outline: none;
            }

    .form-check {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .form-check input {
            margin-right: 10px;
        }

        .form-check label {
            font-size: 0.9rem;
            color: #333;
        }

    .link {
        font-size: 0.9rem;
        color: #666;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .link span {
            color: #009970; /* Green color for the link */
            font-weight: 500;
        }

        .link:hover {
            color: #009970; /* Green color on hover */
        }

    .btn {
        width: 100%;
        padding: 12px;
        background-color: #009970; /* Green button */
        color: #fff;
        border: none;
        border-radius: 8px; /* Rounded corners */
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #007b5e; /* Darker green on hover */
        }

    .text-danger {
        font-size: 0.8rem;
        color: #dc3545; /* Red for validation errors */
    }
</style>