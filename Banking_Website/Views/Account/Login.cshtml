@model Banking_Website.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
}

<section id="login" class="auth-section">
    <div class="form-container animate">
        <h2 class="text-center">Login</h2>
        <p class="text-center">Access your account securely.</p>

        <form asp-action="Login" asp-controller="Account" method="post" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-group">
                <label asp-for="Email">Your Email</label>
                <input type="email" asp-for="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password">Your Password</label>
                <input type="password" asp-for="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="RememberMe" type="checkbox" id="RememberMe">
                <label for="RememberMe">@Html.DisplayNameFor(a => a.RememberMe)</label>
            </div>

            <div class="text-center">
                <a asp-action="Register" class="link">Don't have an account?</a>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".animate").forEach(el => {
                el.style.opacity = "0";
                setTimeout(() => {
                    el.style.transition = "opacity 1s ease-in-out";
                    el.style.opacity = "1";
                }, 300);
            });
        });
    </script>
}


<style>
    :root {
        --primary-color: #009970;
        --background-color: #f8f9fa;
        --text-color: #333;
        --contrast-color: #ffffff;
        --shadow-color: rgba(0, 0, 0, 0.1);
    }

    body {
        font-family: "Roboto", sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .auth-section {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .form-container {
        background: var(--contrast-color);
        padding: 30px;
        border-radius: 10px;
        margin-top: 300px;
        box-shadow: 0 4px 10px var(--shadow-color);
        width: 350px;
        transition: transform 0.3s ease-in-out;
    }

    .form-container:hover {
        transform: translateY(-5px);
    }

    h2 {
        font-family: "Raleway", sans-serif;
        color: var(--primary-color);
    }

    .input-group {
        margin-bottom: 15px;
    }

    .input-group label {
        font-weight: bold;
        display: block;
    }

    .input-group input,
    .input-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border 0.3s;
    }

    .input-group input:focus,
    .input-group textarea:focus {
        border-color: var(--primary-color);
        outline: none;
    }

    .btn {
        background-color: var(--primary-color);
        color: var(--contrast-color);
        padding: 10px;
        width: 100%;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .btn:hover {
        background-color: #007b5e;
    }

    .text-center {
        text-align: center;
        margin-top: 10px;
    }

    .link {
        color: var(--primary-color);
        text-decoration: none;
        font-size: 14px;
    }

    .link:hover {
        text-decoration: underline;
    }
</style>


